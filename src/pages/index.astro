---
import Editor from '../components/Editor.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="MC - Code to Music. Write code, generate ambient music." />
    <title>MC</title>
    <!-- TODO: make a favicon  -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Jetbrains, coz they my type -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="app">
      <header class="header">
        <div class="logo">
          <span class="logo-text">MC</span>
          <span class="logo-tagline">code → music</span>
        </div>
        <div class="header-actions">
          <button id="play-code" class="icon-button" aria-label="Play code as music" title="Play code as music">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
          </button>
          <div id="audio-indicator" class="audio-indicator" title="Audio inactive - start typing to activate">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
              <line x1="23" y1="9" x2="17" y2="15" class="audio-muted"></line>
              <line x1="17" y1="9" x2="23" y2="15" class="audio-muted"></line>
              <path d="M15.54 8.46a5 5 0 0 1 0 7.07" class="audio-wave audio-wave-1"></path>
              <path d="M19.07 4.93a10 10 0 0 1 0 14.14" class="audio-wave audio-wave-2"></path>
            </svg>
          </div>
          <button id="about-toggle" class="icon-button" aria-label="About">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 16v-4"></path>
              <path d="M12 8h.01"></path>
            </svg>
          </button>
          <button id="settings-toggle" class="icon-button" aria-label="Toggle settings">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
            </svg>
          </button>
        </div>
      </header>

      <main class="editor-wrapper">
        <Editor />
      </main>

      <aside id="settings-panel" class="settings-panel hidden">
        <div class="settings-header">
          <span class="settings-title">Settings</span>
          <button id="settings-close" class="close-button" aria-label="Close settings">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>

        <div class="settings-content">
          <div class="setting-row">
            <label for="volume-slider" class="setting-label">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
                <path d="M15.54 8.46a5 5 0 0 1 0 7.07"></path>
              </svg>
              <span>Volume</span>
            </label>
            <div class="slider-container">
              <input type="range" id="volume-slider" min="0" max="100" value="70" class="volume-slider" />
            </div>
          </div>

          <div class="setting-row">
            <label for="theme-select" class="setting-label">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
                <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"></path>
              </svg>
              <span>Theme</span>
            </label>
            <select id="theme-select" class="setting-select"></select>
          </div>

          <div class="setting-row">
            <label for="language-select" class="setting-label">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
              </svg>
              <span>Language</span>
            </label>
            <select id="language-select" class="setting-select"></select>
          </div>

          <div class="setting-row">
            <label class="setting-label">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 7V4a2 2 0 0 1 2-2h8.5L20 7.5V20a2 2 0 0 1-2 2H4"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <path d="M5 12h.01M5 16h.01M5 20h.01"></path>
              </svg>
              <span>Vim Mode</span>
            </label>
            <button id="vim-toggle" class="toggle-button" aria-pressed="false">
              <span class="toggle-track">
                <span class="toggle-thumb"></span>
              </span>
            </button>
          </div>
        </div>

        <div class="settings-footer">
          <button id="thanks-toggle" class="thanks-button">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
            </svg>
            <span>Thanks</span>
          </button>
          <a href="https://github.com/pwnwriter" target="_blank" rel="noopener noreferrer" class="dev-link">
            <img src="https://github.com/pwnwriter.png" alt="pwnwriter" class="dev-avatar" />
            <span>pwnwriter</span>
          </a>
        </div>
      </aside>

      <div id="thanks-modal" class="modal hidden">
        <div class="modal-backdrop"></div>
        <div class="modal-content thanks-content">
          <button id="thanks-close" class="close-button" aria-label="Close thanks">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
          <div class="thanks-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
            </svg>
            <h2>Built with</h2>
          </div>
          <p class="thanks-desc">mc wouldn't exist without these goated projects</p>
          <div class="deps-list">
            <div class="deps-section">
              <h3>Core</h3>
              <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">astro</span>
                <span class="dep-desc">the web framework</span>
              </a>
              <a href="https://codemirror.net" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">codemirror</span>
                <span class="dep-desc">code editor</span>
              </a>
              <a href="https://tonejs.github.io" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">tone.js</span>
                <span class="dep-desc">web audio synthesis</span>
              </a>
            </div>
            <div class="deps-section">
              <h3>Languages</h3>
              <a href="https://github.com/codemirror/lang-javascript" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">@codemirror/lang-javascript</span>
              </a>
              <a href="https://github.com/codemirror/lang-python" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">@codemirror/lang-python</span>
              </a>
              <a href="https://github.com/codemirror/lang-rust" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">@codemirror/lang-rust</span>
              </a>
              <a href="https://github.com/replit/codemirror-lang-nix" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">@replit/codemirror-lang-nix</span>
              </a>
            </div>
            <div class="deps-section">
              <h3>Editor</h3>
              <a href="https://github.com/replit/codemirror-vim" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">@replit/codemirror-vim</span>
                <span class="dep-desc">vim keybindings</span>
              </a>
              <a href="https://github.com/codemirror/theme-one-dark" target="_blank" rel="noopener noreferrer" class="dep-item">
                <span class="dep-name">@codemirror/theme-one-dark</span>
                <span class="dep-desc">theme reference</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div id="about-modal" class="modal hidden">
        <div class="modal-backdrop"></div>
        <div class="modal-content">
          <button id="about-close" class="close-button" aria-label="Close about">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
          <div class="about-header">
            <img src="https://github.com/pwnwriter.png" alt="pwnwriter" class="about-avatar" />
            <div class="about-info">
              <h2>Nabeen</h2>
              <p class="about-handle">@pwnwriter</p>
            </div>
          </div>
          <p class="about-desc">Hey, I’m pwnwriter. I like shipping weird ideas, and this is one of them. Hope y’all vibe with it.</p>
          <div class="about-links">
            <a href="https://pwnwriter.me" target="_blank" rel="noopener noreferrer" class="about-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="2" y1="12" x2="22" y2="12"></line>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
              </svg>
              pwnwriter.me
            </a>
            <a href="https://github.com/pwnwriter" target="_blank" rel="noopener noreferrer" class="about-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
              </svg>
              GitHub
            </a>
          </div>
        </div>
      </div>
    </div>

    <script>
      import { setTheme, setLanguage, toggleVim, setVolume, getVolume, themeRegistry, languageRegistry, playCurrentCode } from '../scripts/editor';
      import { getThemesByGroup } from '../scripts/themes/index';

      // Play code button
      const playCodeButton = document.getElementById('play-code');
      playCodeButton?.addEventListener('click', async () => {
        playCodeButton.classList.add('playing');
        await playCurrentCode();
        setTimeout(() => playCodeButton.classList.remove('playing'), 2000);
      });

      // Settings panel toggle
      const settingsToggle = document.getElementById('settings-toggle');
      const settingsPanel = document.getElementById('settings-panel');
      const settingsClose = document.getElementById('settings-close');

      settingsToggle?.addEventListener('click', () => {
        settingsPanel?.classList.toggle('hidden');
      });

      settingsClose?.addEventListener('click', () => {
        settingsPanel?.classList.add('hidden');
      });

      // About modal toggle
      const aboutToggle = document.getElementById('about-toggle');
      const aboutModal = document.getElementById('about-modal');
      const aboutClose = document.getElementById('about-close');
      const modalBackdrop = aboutModal?.querySelector('.modal-backdrop');

      aboutToggle?.addEventListener('click', () => {
        aboutModal?.classList.remove('hidden');
      });

      aboutClose?.addEventListener('click', () => {
        aboutModal?.classList.add('hidden');
      });

      modalBackdrop?.addEventListener('click', () => {
        aboutModal?.classList.add('hidden');
      });

      // Thanks modal toggle
      const thanksToggle = document.getElementById('thanks-toggle');
      const thanksModal = document.getElementById('thanks-modal');
      const thanksClose = document.getElementById('thanks-close');
      const thanksBackdrop = thanksModal?.querySelector('.modal-backdrop');

      thanksToggle?.addEventListener('click', () => {
        thanksModal?.classList.remove('hidden');
      });

      thanksClose?.addEventListener('click', () => {
        thanksModal?.classList.add('hidden');
      });

      thanksBackdrop?.addEventListener('click', () => {
        thanksModal?.classList.add('hidden');
      });

      // Theme select
      const themeSelect = document.getElementById('theme-select') as HTMLSelectElement;
      if (themeSelect) {
        const groups = getThemesByGroup();
        groups.forEach((themes, groupName) => {
          const optgroup = document.createElement('optgroup');
          optgroup.label = groupName;
          themes.forEach(theme => {
            const option = document.createElement('option');
            option.value = theme.id;
            option.textContent = theme.name;
            optgroup.appendChild(option);
          });
          themeSelect.appendChild(optgroup);
        });

        // Set default based on system preference
        const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        themeSelect.value = isDark ? 'midnight' : 'dawn';

        themeSelect.addEventListener('change', () => {
          setTheme(themeSelect.value);
        });
      }

      // Language select
      const languageSelect = document.getElementById('language-select') as HTMLSelectElement;
      if (languageSelect) {
        languageRegistry.forEach(lang => {
          const option = document.createElement('option');
          option.value = lang.id;
          option.textContent = lang.name;
          languageSelect.appendChild(option);
        });

        languageSelect.value = 'rust';

        languageSelect.addEventListener('change', () => {
          setLanguage(languageSelect.value);
        });
      }

      // Vim toggle
      const vimToggle = document.getElementById('vim-toggle');
      if (vimToggle) {
        vimToggle.addEventListener('click', () => {
          const enabled = toggleVim();
          vimToggle.setAttribute('aria-pressed', String(enabled));
          vimToggle.classList.toggle('active', enabled);
        });
      }

      // Volume slider
      const volumeSlider = document.getElementById('volume-slider') as HTMLInputElement;
      if (volumeSlider) {
        volumeSlider.value = String(getVolume() * 100);
        volumeSlider.addEventListener('input', () => {
          setVolume(Number(volumeSlider.value) / 100);
        });
      }

      // Close panels on escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          if (!thanksModal?.classList.contains('hidden')) {
            thanksModal?.classList.add('hidden');
          } else if (!aboutModal?.classList.contains('hidden')) {
            aboutModal?.classList.add('hidden');
          } else if (!settingsPanel?.classList.contains('hidden')) {
            settingsPanel?.classList.add('hidden');
          }
        }
      });
    </script>
  </body>
</html>
